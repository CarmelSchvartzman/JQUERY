<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
$(()=>{

const fnP = (v)=>{

  return new Promise((resolve,reject)=>{        <<<<<<<<<<<<<<<<<<<<<<<<<<<<<    or " (a,b) "  ,  or "  (x,y)  " 

      if(v !== null) resolve(`returned : ${v}`);       <<<<<<<<<<<<<<<<<<<<<<<<<<<<<   
      else reject('Bad request');

  });
};

$("#b").on({"click": function(){  
  
   fnP($('#i').val()).then((data)=>{       <<<<<<<<<<<<<<<<<<<<<<<<<<<<<   
    
   		 $('#a').html(`<h2>The paragraph was clicked. Value = ${data}</h2>`);
    
    });    
    
  }
});

});
</script>
</head>
<body>
<input id=i />
<button id='b' >Click this paragraph.</button>
<div id='a' href='#'  >Du text</div>
</body>
</html>
